{
  "processors": ["stylelint-processor-styled-components"],
  "extends": [
    "stylelint-config-recommended",
    "stylelint-config-styled-components"
  ],
  "rules": {
    "no-descending-specificity": null,
    "property-no-unknown": [
      true, 
      {
        "checkPrefixed": true, 
        "ignoreProperties": [
          "/-styled-mixin/", 
          "font-smoothing"
        ]
      }
    ],
    "selector-type-no-unknown": [
      true, 
      {
        "ignoreTypes": [
          "$dummyValue",
          "/-styled-mixin/"
        ]
      }
    ]
  }
}
